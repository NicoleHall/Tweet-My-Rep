<div class="container">
  <% if @legislators == [] %>
  <%= link_to "You've entered an invalid zip, try again", root_path %>
 <% else %>

  <h1>The legislators who represent you are: <%= formatted_legislators_in_list %></h1>
  <% end %>

  <% @legislators.each do |legislator|%>
  <p>
    <%= form_for :tweet, url: tweets_path, method: :post do |f| %>
    <%= f.label "Type Tweet Here" %>
    <%= f.text_field(:message, :value => "@#{legislator["twitter_id"]}") %>
    <%= f.submit "Send Tweet" %>
    <% end %>
  </p>
  <% end %>

</div>
